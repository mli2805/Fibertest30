{
  "ConnectionStrings": {
    "Default": "Data Source=data/rtu.db;Cache=Shared"
  },
  "JwtSettings": {
    "Issuer": "Rfts400",
    "Audience": "Rfts400",
    "ExpireMinutes": 10080,
    "SecretKey": "secret-key-should-be-different-per-device"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": {
      "Debug": {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:u} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      "Console": {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:u} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      "File": {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "outputTemplate": "[{Timestamp:u} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 104857600,
          "retainedFileCountLimit": 20
        }
      }
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "GprcWeb": {
        "Url": "http://*:5234",
        "Protocols": "Http1"
      },
      "GprcWebAndGrpc": {
        "Url": "http://*:5235",
        "Protocols": "Http2"
      }
    }
  },
  "Emulator": {
    "Enabled": false,
    "TimeZoneSerializedString": null
  },
  "StartGrpcReflectionService": false,
  "OtdrMeasEngine": {
    "ServerHost": "localhost",
    "ServerPort": 50051
  },
  "Otdr": {
    "ConnectionParameters": {
      "Use": "Usb"
    }
  },

  "MySqlConnectionString": "server=localhost;port=3306;user id=root;password=root;database={0}",
}
